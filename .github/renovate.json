{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^releases/.*/Chart.yaml$/",
        "/^releases/.*/values.yaml$/",
        "/^values.yaml.gotmpl$/",
        "/^docker-bake.hcl$/"
      ],
      "matchStrings": [
        "# renovate: dataSource=(?<datasource>.*?) depName=(?<depName>.*?)( packageName=(?<packageName>.*?))?\\s+\\S+?(: | = )\"?(?<currentValue>\\d+\\.\\d+\\.\\d+)\"?"
      ],
      "extractVersionTemplate": "^v?(?<version>.*)$"
    }
  ],
  "helmfile": {
    "enabled": true
  }
}
